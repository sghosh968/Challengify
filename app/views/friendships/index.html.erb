<div class="panel panel-grey">
  <div class="panel-heading">Listing friends</div>
  <div class="panel-body">
    <table class="table table-hover-color">
      <thead>
        <tr>
          <th>ID</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @friendships.each do |friendship| %>
        <tr class="<%= cycle("active", "success", "warning", "danger") -%>">
          <td><%= friendship.friend_id %></td>
          <td><%= friendship.status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
