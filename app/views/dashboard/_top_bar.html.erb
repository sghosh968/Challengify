<header class="main-header">
  <!-- Logo -->
  <a href="index2.html" class="logo"><b>Challengify</b></a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">


        <li class="dropdown tasks-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
            <i class="fa fa-user-plus fa-1"></i>
            <span class="label label-danger"><%= current_user.pending_received_friend_requests.count if current_user.pending_received_friend_requests.present? %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="header">You have received <%= current_user.pending_received_friend_requests.count if current_user.pending_received_friend_requests.present? %> friendrequests</li>
            <li>
              <!-- inner menu: contains the actual data -->
              <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 200px;"><ul class="menu" style="overflow: hidden; width: 100%; height: 200px;">

                  <%= raw(friend_requests_notifications(current_user.pending_received_friend_requests)) %>
                
              </ul><div class="slimScrollBar" style="width: 3px; position: absolute; top: 0px; opacity: 0.4; display: none; border-radius: 7px; z-index: 99; right: 1px; height: 188.679245283019px; background: rgb(0, 0, 0);"></div><div class="slimScrollRail" style="width: 3px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; opacity: 0.2; z-index: 90; right: 1px; background: rgb(51, 51, 51);"></div></div>
            </li>
            <li class="footer">
              <a href="#">View all requests</a>
            </li>
          </ul>
        </li>

        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src=<%= get_user_image_url(current_user) %> class="user-image" alt="User Image"/>
            <span class="hidden-xs"><%= current_user.name %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <img src=<%= get_user_image_url(current_user) %> class="img-circle" alt="User Image" />
              <p>
                Alexander Pierce - Web Developer
                <small>Member since <%= current_user.created_at.to_datetime.strftime("%B %d, %Y") %></small>
              </p>
            </li>
            <!-- Menu Body -->
            <li class="user-body">
              <div class="col-xs-4 text-center">
                <a href="#">Followers</a>
              </div>
              <div class="col-xs-4 text-center">
                <a href="#">Sales</a>
              </div>
              <div class="col-xs-4 text-center">
                <a href="#">Friends</a>
              </div>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <a href=<%= edit_user_path(current_user) %> class="btn btn-default btn-flat">Profile</a>
              </div>
              <div class="pull-right">
                <a href=<%= destroy_user_session_path %> class="btn btn-default btn-flat" method="delete">Sign out</a>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
