<header class="main-header">
  <!-- Logo -->
  <a href="index2.html" class="logo"><b>Challengify</b></a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">


        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src=<%= get_user_image_url(current_user) %> class="user-image" alt="User Image"/>
            <span class="hidden-xs"><%= current_user.name %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <img src=<%= get_user_image_url(current_user) %> class="img-circle" alt="User Image" />
              <p>
                Alexander Pierce - Web Developer
                <small>Member since <%= current_user.created_at.to_datetime.strftime("%B %d, %Y") %></small>
              </p>
            </li>
            <!-- Menu Body -->
            <li class="user-body">
              <div class="col-xs-4 text-center">
                <a href="#">Followers</a>
              </div>
              <div class="col-xs-4 text-center">
                <a href="#">Sales</a>
              </div>
              <div class="col-xs-4 text-center">
                <a href="#">Friends</a>
              </div>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <a href=<%= edit_user_path(current_user) %> class="btn btn-default btn-flat">Profile</a>
              </div>
              <div class="pull-right">
                <a href=<%= destroy_user_session_path %> class="btn btn-default btn-flat" method="delete">Sign out</a>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
