<div class="box box-success">
  <div class="box-header">
    <h3 class="box-title">Create Challenge</h3></div>

      <%= form_for(@challenge, {:role => "form"}) do |f| %>
      <div class="box-body">
        <% if @challenge.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

            <ul>
            <% @challenge.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>



            <div class="form-group">
              <div class="row">
                <div class="col-sm-1">
                  <%= f.label :name, :class => "control-label" %>
                </div>
                <div class="col-sm-7">
                  <%= f.text_field :name ,:class =>"form-control"%>
                </div>
              </div>
            </div>



            <div class="form-group">
              <div class="row">
                <div class="col-sm-1">
                  <%= f.label :description, :class => "control-label" %>
                </div>
                <div class="col-sm-7">
                  <%= f.text_area :description ,:class =>"form-control"%>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="row">
                <div class="col-sm-1">
                  <%= f.label :starts_on, :class => "control-label" %>
                </div>
                <div class="col-sm-7">
                  <div style="display:none">
                    <%= f.datetime_select :starts_on ,:class => 'datetimepicker' %>
                  </div>
                  <%= f.text_field :c_start, :class => "datetimepicker",:id => "c_start"  %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="row">
                <div class="col-sm-1">
                  <%= f.label :ends_on, :class => "control-label" %>
                </div>
                <div class="col-sm-7">
                  <div style="display:none">
                    <%= f.datetime_select :ends_on %>
                  </div>
                  <%= f.text_field :c_end, :class => "datetimepicker",:id => "c_end"  %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="row">
                <div class="col-sm-1">
                  <%= f.label :image, :class => "control-label" %>
                </div>
                <div class="col-sm-7">
                  <%= f.file_field :image %>
                </div>
              </div>
            </div>




  </div>
        <div class="box-footer">
          <%= f.submit :class => "btn btn-primary" %>
          </div>
      <% end %>

</div>





