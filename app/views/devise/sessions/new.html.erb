<div class="page-form">
  <div class="panel panel-blue">
    <div class="panel-body pan">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:class => "form-horizontal"}) do |f| %>
          <div class="form-body pal">
            <div class="col-md-12 text-center">
              <h1 style="margin-top: -90px; font-size: 48px;">
                Login</h1>
                <br />
              </div>
              <div class="form-group">
                <div class="col-md-3">
                  <img src=<%= "assets/avatar/profile-pic.png" %> class="img-responsive" style="margin-top: -35px;" />
                </div>
                <div class="col-md-9 text-center">
                  <h1>
                    Hold on, please.</h1>
                    <br />
                    <p>
                      Just sign in and weâ€™ll send you on your way</p>
                    </div>
                  </div>
                  <div class="form-group">

                        <%= f.label "Email:" ,:class => "col-md-3 control-label" , :for => "user_email" %>
                        <div class="col-md-9">
                          <div class="input-icon right">
                            <i class="fa fa-user"></i>
                              <%= f.email_field :email, autofocus: true ,:placeholder => "", :class => "form-control" %>
                          </div>
                        </div>

                  </div>
                  <div class="form-group">

                            <%= f.label "Password:",:class => "col-md-3 control-label" %>
                            <div class="col-md-9">
                              <div class="input-icon right">
                                <i class="fa fa-lock"></i>
                                  <%= f.password_field :password, autocomplete: "off",:placeholder => "", :class => "form-control" %>
                              </div>
                            </div>

                  </div>
                  <div class="form-group mbn">
                    <div class="col-lg-12" align="right">
                      <div class="form-group mbn">
                        <div class="col-lg-3">
                          &nbsp;
                        </div>
                        <div class="col-lg-9">
                            <% if devise_mapping.rememberable? -%>

                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me  %>

                            <% end -%>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group mbn">
                    <div class="col-lg-12" align="right">
                      <div class="form-group mbn">
                        <div class="col-lg-3">
                          &nbsp;
                        </div>
                        <div class="col-lg-9">
                          <%= f.submit "Log in" ,:class => "btn btn-default" %>
                          <% end %>
                          <%= render "devise/shared/links" %>
                          </div>
                        </div>
                      </div>
                    </div>
          </div>

        </div>
      </div>
    </div>
